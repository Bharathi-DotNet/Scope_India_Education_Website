@{
    Layout = "student_db";
}
@model scope_project_2.Models.Display;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Add Bootstrap CSS -->
   <style>
       th,td{color:white!important;}
   </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <form asp-action="Search_For_Course" method="post">
            <table class="table table-striped table-bordered">
                <thead class="bg-success bg-opacity-10">
                    <tr>
                        <th>Courses Name</th>
                        <th>Duration</th>
                        <th>Fees</th>
                        <th>Your Options</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>.Net</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="Dotnet" /></td>
                    </tr>
                    <tr>
                        <td>Python</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="Python" /></td>
                    </tr>
                    <tr>
                        <td>Java</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="Java" /></td>
                    </tr>
                    <tr>
                        <td>Php</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="Php" /></td>
                    </tr>
                    <tr>
                        <td>Testing</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="Testing" /></td>
                    </tr>
                    <tr>
                        <td>Flutter</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="Flutter" /></td>
                    </tr>
                    <tr>
                        <td>React Native</td>
                        <td>4 Months</td>
                        <td>35,000</td>
                        <td><input type="submit" asp-for="Selected" value="React Native" /></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>

    <!-- Add Bootstrap JS (for responsive features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
