@{
    Layout = "student_db";
}
<!DOCTYPE html>
<html>
<head>
    <title>Student Details</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .student-img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 50%;
        }
        td{
            color:white !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid py-5">
        <h1 class="text-center mb-4">Student Details</h1>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="bg-success text-white">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Gender</th>
                                <th>Date of Birth</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Hobbies</th>
                                <th>Image</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (string[] student in ViewBag.arr)
                            {
                                <tr>
                                    <td>@student[0]</td>
                                    <td>@student[1]</td>
                                    <td>@student[2]</td>
                                    <td>@student[3]</td>
                                    <td>@student[4]</td>
                                    <td>@student[5]</td>
                                    <td>@student[6]</td>
                                    <td>@student[7]</td>
                                    <td>@student[8]</td>
                                    <td>@student[9]</td>
                                    <td><img src="@Url.Content("~/images/images.jpg")" alt="Profile Picture" /></td>
                                    <td> <a href="\Edit\edit">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
